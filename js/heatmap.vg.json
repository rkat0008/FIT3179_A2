{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/rkat0008/FIT3179_A2/main/data/CityPair_Clean.csv"
    },
    "transform": [
      {
        "calculate": "toDate(datum.Month, '%d/%m/%Y')",
        "as": "Date"
      },
      {
        "calculate": "year(datum.Date)",
        "as": "Year"
      },
      {
        "calculate": "month(datum.Date)",
        "as": "Month"
      },
      {
        "aggregate": [
          { "op": "mean", "field": "PaxOut", "as": "PaxOutSum" }
        ],
        "groupby": ["Port Country", "Month_Number"]
      }
    ],
    "title": "Seasonal Travel Patterns",
    "config": {
      "view": {
        "strokeWidth": 0,
        "step": 13
      },
      "axis": {
        "domain": false
      }
    },
    "mark": "rect",
    "encoding": {
      "x": {
        "field": "Month_Number",
        "type": "ordinal",
        "title": "Month",
        "sort": {"op": "min", "field": "Month_Number", "order": "ascending"}
      },
      "y": {
        "field": "Port Country",
        "type": "nominal",
        "title": "Cities"
      },
      "color": {
        "field": "PaxOutSum",
        "type": "quantitative",
        "legend": {
          "title": null
        },
        "scale": {"type": "linear"}
      }
    }
  }
  