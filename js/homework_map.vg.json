{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "vconcat": [
      {
    "width": 800,
    "height": 500,
    "title": "Flights out of Melbourne",
    "projection": {"type": "equalEarth", "reflectY": false, "rotate": [-154, 0, 0]},
    "layer": [
      {
        "data": {
          "url": "../data/ne_110m_admin_0_countries.json",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "skyblue"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "projection": {
          "type": "equalEarth",
          "reflectY": false,
          "rotate": [-154, 0, 0]
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
      {
        "data": {
          "url": "../data/CityPair_Clean.csv"
        },
        "transform": [
          {"filter": {"param": "time_brush"}},
          {"filter": {"field": "Australian", "equal": "Melbourne"}},
          {
            "lookup": "Australian",
            "from": {
              "data": {
                "url": "../data/CityPair_Clean.csv"
              },
              "key": "Australian",
              "fields": ["Melbourne_Latitude", "Melbourne_Longitude"]
            },
            "as": ["origin_latitude", "origin_longitude"]
          },
          {
            "lookup": "International",
            "from": {
              "data": {
                "url": "../data/CityPair_Clean.csv"
              },
              "key": "International",
              "fields": ["Latitude", "Longitude"]
            },
            "as": ["dest_latitude", "dest_longitude"]
          }
        ],
        "mark": "rule",
        "encoding": {
          "longitude": {
            "field": "origin_longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "origin_latitude",
            "type": "quantitative"
          },
          "longitude2": {"field": "dest_longitude"},
          "latitude2": {"field": "dest_latitude"}}
      },
      {
        "data": {
          "url": "../data/CityPair_Clean.csv"
        },
        "transform": [
          {"filter": {"param": "time_brush"}}],
        "mark": "circle",
        "encoding": {
          "longitude": {
            "field": "Longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "Latitude",
            "type": "quantitative"
          },
          "size": {"field": "PaxOut", "type": "quantitative", "scale": {"type": "sqrt"}},
          "color": {"field": "PaxOut", "type": "quantitative", "scale": {"type": "sqrt", "range": ["red", "black"]}},
          "tooltip": [
            {"field": "International", "type": "nominal", "title": "City"},
            {"field": "PaxOut", "type": "quantitative"},
            {"field": "Port Region", "type": "nominal"}
          ]
        },
        "layer": [
          {"mark": {"type": "circle", "opacity": 0.4, "size": 1}},
          {
            "transform": [
              {
                "window": [{"op": "rank", "as": "ranking"}],
                "sort": [{"field": "PaxOut", "order": "ascending"}]
              },
              {"filter": "datum.ranking == 1"},
              {
                "calculate": "'The worst earthquake of; the selected period: ' + datum['PaxOut']",
                "as": "text_annotation_raw"
              },
              {
                "calculate": "split(datum.text_annotation_raw, ';')",
                "as": "text_annotation"
              }
            ],
            "mark": {
              "type": "text",
              "align": "right",
              "dx": -1,
              "dy": -1,
              "baseline": "middle",
              "fontStyle": "italic",
              "fontSize": 1
            },
            "encoding": {"text": {"field": "text_annotation"}}
          }
        ]
      },
      {
        "data": {
          "url": "../data/CityPair_Clean.csv"
        },
        "transform": [
          {"filter": {"param": "time_brush"}}],
        "mark": "circle",
        "encoding": {
          "longitude": {
            "field": "Melbourne_Longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "Melbourne_Latitude",
            "type": "quantitative"
          },
          "size": {"value": 100},
          "color": {"value": "black"}
        }
      }
    ]
},
{
  "width": 800,
  "height": 60,
  "data": {
    "url": "../data/CityPair_Clean.csv"
  },
  "mark": "area",
  "title": "Use this line chart to filter out the data based on time",
  "params": [
    {
      "name": "time_brush",
      "select": {"type": "interval", "encodings": ["x"]}
    }
  ],
  "encoding": {
    "x": {
      "field": "Month",
      "timeUnit": "yearmonth",
      "axis": {"title": "", "format": "%Y"}
    },
    "y": {
      "aggregate": "sum",
      "field": "PaxOut",
      "axis": {"tickCount": 3, "grid": false},
      "title": "Count"
    }
  }
}
],
  "config": {"title": {"font": "sans-serif", "fontSize": 14}}
  }