{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "Flights out of Melbourne",
    "projection": {"type": "equalEarth", "reflectY": false},
    "layer": [
      {
        "data": {
          "url": "../data/ne_110m_admin_0_countries.json",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "projection": {
          "type": "identity",
          "reflectY": true
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
      {
        "data": {
          "url": "../data/CityPair_Clean_CRS.csv"
        },
        "mark": "circle",
        "encoding": {
          "longitude": {
            "field": "X",
            "type": "quantitative"
          },
          "latitude": {
            "field": "Y",
            "type": "quantitative"
          },
          "size": {"value": 5},
          "color": {"value": "gray"}
        }
      },
      {
        "data": {
          "url": "../data/CityPair_Clean_CRS.csv"
        },
        "mark": "circle",
        "encoding": {
          "longitude": {
            "field": "X_MEL",
            "type": "quantitative"
          },
          "latitude": {
            "field": "Y_MEL",
            "type": "quantitative"
          },
          "size": {"value": 5},
          "color": {"value": "red"}
        }
      },
      {
        "data": {
          "url": "../data/CityPair_Clean_CRS.csv"
        },
        "transform": [
          {"filter": {"field": "Australian", "equal": "Melbourne"}},
          {
            "lookup": "Australian",
            "from": {
              "data": {
                "url": "../data/CityPair_Clean_CRS.csv"
              },
              "key": "Australian",
              "fields": ["Y_MEL", "X_MEL"]
            },
            "as": ["origin_latitude", "origin_longitude"]
          },
          {
            "lookup": "International",
            "from": {
              "data": {
                "url": "../data/CityPair_Clean_CRS.csv"
              },
              "key": "International",
              "fields": ["Y", "X"]
            },
            "as": ["dest_latitude", "dest_longitude"]
          }
        ],
        "mark": "rule",
        "encoding": {
          "longitude": {
            "field": "origin_longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "origin_latitude",
            "type": "quantitative"
          },
          "longitude2": {"field": "dest_longitude"},
          "latitude2": {"field": "dest_latitude"},
          "strokeWidth": {"field": "OutSeatsMax", "type": "quantitative", "scale": {"type": "sqrt"}},
          "color": {"field": "OutSeatsMax", "type": "quantitative", "scale": {"type": "sqrt", "range": ["gray", "red"]}}
        }
      }
    ]
  }