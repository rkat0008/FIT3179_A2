{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "Flights out of Melbourne",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "../data/ne_50m.json",
          "format": {
            "type": "topojson",
            "feature": "ne_50m_admin_0_countries"
          }
        },
        "projection": {
          "type": "equalEarth",
          "center": [144.97307, -37]
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "projection": {
            "type": "equalEarth",
            "center": [144.97307, -37]
          },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
      {
        "data": {
          "url": "../data/CityPair_Clean.csv"
        },
        "projection": {
          "type": "equalEarth",
          "center": [144.97307, -37]
        },
        "mark": "circle",
        "encoding": {
          "longitude": {
            "field": "Longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "Latitude",
            "type": "quantitative"
          },
          "size": {"value": 5},
          "color": {"value": "gray"}
        }
      },
      {
        "data": {
          "url": "../data/CityPair_Clean.csv"
        },
        "projection": {
          "type": "equalEarth",
          "center": [144.97307, -37]
        },
        "mark": "circle",
        "encoding": {
          "longitude": {
            "field": "Melbourne_Longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "Melbourne_Latitude",
            "type": "quantitative"
          },
          "size": {"value": 5},
          "color": {"value": "gray"}
        }
      },
      {
        "data": {
          "url": "../data/CityPair_Clean.csv"
        },
        "transform": [
          {"filter": {"field": "Australian", "equal": "Melbourne"}},
          {
            "lookup": "Australian",
            "from": {
              "data": {
                "url": "../data/CityPair_Clean.csv"
              },
              "key": "Australian",
              "fields": ["Melbourne_Latitude", "Melbourne_Longitude"]
            },
            "as": ["origin_latitude", "origin_longitude"]
          },
          {
            "lookup": "International",
            "from": {
              "data": {
                "url": "../data/CityPair_Clean.csv"
              },
              "key": "International",
              "fields": ["Latitude", "Longitude"]
            },
            "as": ["dest_latitude", "dest_longitude"]
          }
        ],
        "projection": {
          "type": "equalEarth",
          "center": [144.97307, -37]
        },
        "mark": "rule",
        "encoding": {
          "longitude": {
            "field": "origin_longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "origin_latitude",
            "type": "quantitative"
          },
          "longitude2": {"field": "dest_longitude"},
          "latitude2": {"field": "dest_latitude"}
        }
      }
    ]
  }